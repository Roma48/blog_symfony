{% extends 'base.html.twig' %}

    {% block header_image %}
        <div id="header-image">
            <div class="image-wrapper" style="background-image: url('{{ article.image.image }}')">
                <div class="dark-shadow">
                    <div class="container">
                        <div class="article-caption">

                            <a class="category" href="/"><i class="fa fa-{{ article.category.class }}"></i> Random</a>

                            <h3>{{ article.title }}</h3>

                            <p>{{ article.description }}</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock header_image %}

    {% block content %}

        <div class="content col col-lg-8">
            <div class="meta_data">
                        <ul>
                            <li class="author"><a class="url fn" href="/">
                                    <span class="fa fa-user"></span>{{ article.user.firstName }}
                                </a>
                            </li>
                            <li class="time">
                                <time class="value updated" datetime="2013-07-20">
                                    <span class="fa fa-calendar-o"></span>
                                    July
                                    20, 2013, 2 years ago
                                </time>
                            </li>
                            <li class="comment">
                                <a href="/">
                                    <span class="fa fa-comment-o"></span>{{ article.comments|length }}
                                </a>
                            </li>
                            <li class="like">
                                <span class="post-like">
                                    <span class="fa fa-heart-o"></span>
                                    <span class="count">{{ article.likes|length }}</span>
                                </span>
                            </li>
                            <li class="views">
                                <span class="fa fa-eye"></span>
                                <span class="views">{{ article.views }}</span>
                            </li>
                        </ul>
                    </div>
            <div class="article-text">
                      {{ article.content }}
            </div>
        </div>
    {% endblock content %}

    {% block sidebar %}
        <div class="sidebar col col-lg-4">
                   <div class="latest-posts">

                       {% for article in popular %}
                           <article>
                               <div class="thumb-hover">
                                   <img width="100" height="100"
                                        src="{{ article.image.preview }}">
                               </div>
                               <div class="post-content">
                                   <h3><a href="/">{{ article.title }}</a>
                                   </h3>
                                   <ul class="meta_data">
                                       <li class="category">
                                           <a href="/" class="c5-meta-cat category-5">
                                               <span class="fa fa-{{ article.category.class }}"></span>Random
                                           </a>
                                       </li>
                                       <li class="like">
                                    <span class="c5-post-like">
                                        <span class="fa fa-heart-o"></span>
                                        <span class="count">{{ article.likes|length }}</span>
                                    </span>
                                       </li>
                                   </ul>
                                   <div class="clearfix"></div>
                               </div>
                           </article>
                       {% endfor %}
                   </div>
               </div>
    {% endblock sidebar %}

